FROM bitnami/minio:latest

# Custom ENV Variables
ARG GEMINI_FILE_SERVER_ACCESS_KEY="gemini"
ARG GEMINI_FILE_SERVER_SECRET_KEY="gemini"
ARG GEMINI_FILE_SERVER_BUCKET_NAME="gemini"
ARG GEMINI_FILE_SERVER_HOSTNAME="storage"

# Copy the environment variables for MinIO
ENV MINIO_SERVER_ACCESS_KEY=${FILE_SERVER_ACCESS_KEY}
ENV MINIO_SERVER_SECRET_KEY=${FILE_SERVER_SECRET_KEY}
ENV MINIO_ROOT_USER=${FILE_SERVER_ACCESS_KEY}
ENV MINIO_ROOT_PASSWORD=${FILE_SERVER_SECRET_KEY}
ENV MINIO_DEFAULT_BUCKETS=${FILE_SERVER_BUCKET_NAME}


# Exposure of MinIO ports
EXPOSE 9000 
EXPOSE 9001
